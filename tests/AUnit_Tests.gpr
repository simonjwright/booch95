with "aunit";

project AUnit_Tests is

  for Main use
    (
     "tests-main.adb"
    );

  for Source_Dirs use (".", "../src");
  for Exec_Dir use ".";
  for Object_Dir use ".build";

  package Builder is
     for Default_Switches ("Ada") use
       (
        "-m",
        "-g"
       );
  end Builder;

  package Compiler is
     for Default_Switches ("Ada") use
       (
        "-gnatqQafoy",
        "-gnatwaL",
        "-gnat95",
        "-O2"
       );
  end Compiler;

  package Binder is
     for Default_Switches ("Ada") use ("-E");
  end Binder;

end AUnit_Tests;
