with "aunit";

project AUnit_Tests is

  for Main use
    (
     "tests-main.adb"
    );

  for Source_Dirs use (".", "../src");
  for Exec_Dir use ".";
  for Object_Dir use ".build";

  package Builder is
     for Default_Switches ("Ada") use
       (
        "-ftest-coverage",
        "-fprofile-arcs",
        "-m",
        "-g"
       );
  end Builder;

